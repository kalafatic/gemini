<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.exportWizards">
      <wizard
            class="eu.kalafatic.gemini.bt.utils.wizards.ExportSyncWizard"
            id="eu.kalafatic.gemini.bt.utils.wizards.ExportSyncWizard"
            name="%wizard.name">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:eu.kalafatic.gemini.core.menus.exportWizardsMenu">
         <command
               commandId="eu.kalafatic.gemini.bt.utils.handlers.ExportSyncHandler"
               icon="platform:/plugin/eu.kalafatic.gemini.core/icons/actions/synch.gif"
               id="eu.kalafatic.gemini.bt.utils.handlers.ExportSyncHandler"
               label="%command.label"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <or>
                     <equals
                           value="eu.kalafatic.gemini.bt.client.view.perspectives.ClientBasePerspective">
                     </equals>
                     <equals
                           value="eu.kalafatic.gemini.bt.tracker.view.perspectives.TrackerBasePerspective">
                     </equals>
                  </or>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="eu.kalafatic.gemini.bt.utils.handlers.ExportSyncHandler"
            name="%command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="eu.kalafatic.gemini.bt.utils.handlers.ExportSyncHandler"
            commandId="eu.kalafatic.gemini.bt.utils.handlers.ExportSyncHandler"
            helpContextId="eu.kalafatic.gemini.bt.utils.handlers.ExportSyncHandler">
      </handler>
   </extension>

</plugin>
